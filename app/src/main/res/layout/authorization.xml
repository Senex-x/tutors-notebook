<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/ButtonAuth"
        android:layout_width="124dp"
        android:layout_height="56dp"
        android:background="@drawable/round_buttons"
        android:backgroundTint="@color/background_blue"
        android:shadowColor="@color/primary_background"
        android:text="@string/EnterButton"
        app:iconTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KeyAuth"
        app:layout_constraintVertical_bias="0.279"
        app:rippleColor="@color/black"
        style="?android:attr/borderlessButtonStyle"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/KeyAuth"
        android:layout_width="224dp"
        android:layout_height="44dp"
        android:background="#8DEDF1FB"
        android:ems="10"
        android:inputType="textPassword"
        android:password="false"
        android:singleLine="false"
        android:text="@string/enter_password"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>